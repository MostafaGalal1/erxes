{
  "extends": "../tsconfig.api.jsonc",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
    "jsx": "react",
    "allowJs": true,
    "checkJs": true,
    "declaration": false,
    "target": "ES2022",
    "moduleResolution": "Node",
    "module": "CommonJS",
    "lib": ["ES2022"],
    "noImplicitAny": false,
    "skipLibCheck": true,
    "strict": true,
    "useUnknownInCatchVariables": false,
    "preserveSymlinks": true,
    "allowSyntheticDefaultImports": true,
    "incremental": true
  },
  "include": ["./src"],
  "exclude": ["./src/public", "node_modules"]
}
